<div class="new-cocktail">
  <h1>Add a new cocktail</h1>
</div>

<div class='container new-cocktail-form'>
  <%= simple_form_for @cocktail do |f| %>
    <% if @cocktail.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @cocktail.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, id: 'btn-create-cocktail', class: 'btn btn-success' %>
  <% end %>
   <%= link_to 'Cancel', cocktails_path, class: "btn btn-danger", id: "btn-back-to-home" %>
</div>
