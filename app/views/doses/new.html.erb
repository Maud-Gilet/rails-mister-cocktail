<h1>Add a new ingredient to the cocktail</h1>

<div class='container'>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit %>
  <% end %>
</div>

<%= link_to 'Cancel', cocktail_path(@cocktail), class: "btn btn-danger" %>
